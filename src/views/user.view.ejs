<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Users</title>
</head>

<body>
    <div class="form-user container p-5">
        <div class="row justify-content-md-center">
            <div class="col-2"></div>
            <form class="col-8" method="post" action="/users/create-user">
                <div class="form-group">
                    <label for="username">User name</label>
                    <input type="text" class="form-control" id="username" name="username" aria-describedby="nameHelp"
                        required placeholder="Enter user name">
                </div>
                <div class="form-group mt-4">
                    <label for=" email">Email address</label>
                    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
                        required placeholder="Enter email">
                </div>
                <div class="form-group mt-4">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                        required>
                </div>
                <button type="submit" class="btn btn-primary mt-4">Submit</button>
            </form>
            <div class="col-2"></div>

        </div>
    </div>
    <div class="table-user container ">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">User name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% userList.forEach((element,index)=> {%>
                    <tr>
                        <th scope="row">
                            <%=index+1%>
                        </th>
                        <td>
                            <%=element.username%>
                        </td>
                        <td>
                            <%=element.email%>
                        </td>
                        <td>
                            <form action="/users/update-user-page/<%= element.id %>" method="post"
                                style="display: inline;">
                                <button class="btn btn-danger">Edit</button>
                            </form>
                            <form action="/users/delete-user/<%=element.id %>" method="post" style="display: inline;">
                                <button class="btn btn-warning">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <%}) %>


            </tbody>
        </table>
    </div>
</body>

</html>